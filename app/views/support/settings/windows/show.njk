{% extends "layouts/support.njk" %}

{% set primaryNavId = "settings" %}

{% set title = window.opensAt | govukDate + " to " + window.closesAt | govukDate %}
{% set caption = "Claim window" %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Date window opens"
            },
            value: {
              text: window.opensAt | govukDate
            },
            actions: {
              items: [
                {
                  href: actions.change,
                  text: "Change",
                  visuallyHiddenText: "date window opens"
                }
              ]
            }
          },
          {
            key: {
              text: "Date window closes"
            },
            value: {
              text: window.closesAt | govukDate
            },
            actions: {
              items: [
                {
                  href: actions.change,
                  text: "Change",
                  visuallyHiddenText: "date window closes"
                }
              ]
            }
          },
          {
            key: {
              text: "Academic year"
            },
            value: {
              text: window.academicYear | getAcademicYearLabel
            },
            actions: {
              items: [
                {
                  href: actions.change,
                  text: "Change",
                  visuallyHiddenText: "academic year"
                }
              ]
            }
          }
        ]
      }) }}

      <p class="govuk-body">
        <a class="govuk-link app-link--destructive" href="{{ actions.delete }}">Remove claim window</a>
      </p>

    </div>
  </div>

{% endblock %}
