{% extends "layouts/support.njk" %}

{% set primaryNavId = "organisations" %}
{% set secondaryNavId = "claims" %}

{% set title = organisation.name %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "_includes/page-heading.njk" %}
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {% include "../_secondary-navigation.njk" %}
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <h2 class="govuk-heading-m">Claims</h2>

     {% set insetHtml %}
        {% if not mentors.length %}
          <p class="govuk-body">
            Claims can no longer be submitted for school year September 2023 to July 2024.
          </p>
          <p class="govuk-body">
            You can still <a href="{{ actions.mentors }}" class="govuk-link">add a mentor</a>.
          </p>
        {% else %}
          <p class="govuk-body">
            Claims can no longer be submitted for school year September 2023 to July 2024.
          </p>
          <p class="govuk-body">
            You can still <a href="{{ actions.mentors }}" class="govuk-link">add a mentor</a>.
          </p>
        {% endif %}

      {% endset %}

      {{ govukInsetText({
        html: insetHtml
      }) }}

      {# {% if mentors.length %}
        {{ govukButton({
          text: "Add claim (Lose button for close claim window)",
          href: actions.new
        }) }}
      {% endif %} #}



      {% if claims.length %}
        <p class="govuk-body">
         <a class="govuk-footer__link" href="mailto:ittmentor.funding@education.gov.uk">Contact the support team</a> if you have a query about claims.
        </p>
        {% include "_includes/claims/list.njk" %}
        {% include "_includes/pagination.njk" %}

      {% else %}
        <p class="govuk-body">There are no claims for {{ organisation.name if organisation.name else "your organisation" }}.</p>
        <p class="govuk-body">
         <a class="govuk-footer__link" href="mailto:ittmentor.funding@education.gov.uk">Contact the support team</a> if you have a query about claims.
        </p>
      {% endif %}

    </div>
  </div>

{% endblock %}
