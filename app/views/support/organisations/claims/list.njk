{% extends "layouts/support.njk" %}

{% set primaryNavId = "organisations" %}
{% set secondaryNavId = "claims" %}

{% set title = organisation.name %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "_includes/page-heading.njk" %}
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {% include "../_secondary-navigation.njk" %}
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h2 class="govuk-heading-m">Claims</h2>

      {% if not mentors.length %}
        {% set insetHtml %}
          <p class="govuk-body">
            Before you can start a claim you will need to <a href="{{ actions.mentors }}" class="govuk-link">add a mentor</a>
          </p>
          <p class="govuk-body">
            You can still <a href="{{ actions.mentors }}" class="govuk-link">add a mentor</a>.
          </p>
          {% endset %}
      {% else %}
      {% set insetHtml %}
          <p class="govuk-body">
            Claims can no longer be submitted for school year September 2023 to July 2024.
          </p>
          <p class="govuk-body">
            You can still <a href="{{ actions.mentors }}" class="govuk-link">add a mentor</a>.
          </p>
        {% endset %}
      {% endif %}



      {{ govukInsetText({
        html: insetHtml
      }) }}

    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      {% if claims.length %}
        {# <p class="govuk-body">
         <a class="govuk-link" href="mailto:ittmentor.funding@education.gov.uk">Contact the support team</a> if you have a query about your claims.
        </p> #}
        {% include "_includes/claims/list.njk" %}
        {% include "_includes/pagination.njk" %}

      {% else %}
        <p class="govuk-body">There are no claims for {{ organisation.name if organisation.name else "your organisation" }}.</p>
        {# <p class="govuk-body">
         <a class="govuk-link" href="mailto:ittmentor.funding@education.gov.uk">Contact the support team</a> if you have a query about your claims.
        </p> #}
      {% endif %}

    </div>
  </div>

{% endblock %}
