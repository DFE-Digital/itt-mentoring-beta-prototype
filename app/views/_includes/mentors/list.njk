<div class="govuk-table--overflow">
  <table class="govuk-table">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header govuk-!-width-one-third">Name</th>
        <th scope="col" class="govuk-table__header">Teacher reference number (TRN)</th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      {% for mentor in mentors %}
        <tr class="govuk-table__row">
          <td class="govuk-table__cell">
            <a class="govuk-link" href="{{ actions.view }}/{{ mentor.id }}">
              {{ mentor.firstName }} {{ mentor.lastName }}
            </a>
          </td>
          <td class="govuk-table__cell">
            {{ mentor.trn if mentor.trn else "Not entered" }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
